<div class="container">
  <div class="place">
      <div class="place-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @place.photo.key, crop: :fill %>')">
      <%# <% @place.photos.each do |photo| %>
      <%# <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <%# <% end %>
      </div>
  </div>
    <div class="text">
      <span class="place-name"><%= @place.name %></span><br>
      <span class="place-description"><%= @place.description %></span><br>
      <span class="place-rating"><%= @place.rating %>‚≠ê </span>
      <span class="place-rating"> Owner: <%= @place.user.email %></span><br>
      <span class="place-price"><%= @place.price %>$ /month </span>
      <button type="button" class="btn btn-primary">Rent</button>
    </div>

    <div style="width: 50%; height: 250px; float: right; margin-top: 20px; box-shadow: 0 0 15px rgba(0,0,0,0.2);"
      data-controller="mapbox"
      data-mapbox-marker-value="<%= @marker.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
