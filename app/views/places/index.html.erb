<div class="container">
  <div class="cards">
    <% @places.each do |place| %>
      <%= link_to show_path(place) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://solutionsandco.com/images/easyblog_articles/844/b2ap3_large_shutterstock_633468920.jpg)">
          <div>
            <span class="card-name"><%= place.name %></span><br>
            <span class="card-price"><%= place.price %> $ /night</span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
